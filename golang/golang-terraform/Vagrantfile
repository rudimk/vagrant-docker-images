Vagrant.configure("2") do |config|
    # Provider for Docker
    config.vm.provider :docker do |docker, override|
      override.vm.box = nil
      docker.image = "rudester/vagrant-docker-golang-terraform:1.15.15-r0.2"
      docker.remains_running = true
      docker.has_ssh = true
      docker.privileged = true
      docker.volumes = ["/sys/fs/cgroup:/sys/fs/cgroup:ro"]
      docker.create_args = ['--platform=linux/amd64']
    end
    config.vm.hostname = "vagrant-docker-golang-terraform-box"
    config.vm.network "private_network", ip: "10.0.0.12"
  end